@model MVC_Register.Models.UserProfile
@{
    ViewBag.Title = "ProfilePageLoad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Profile</h2>
<div>
    @using (Html.BeginForm("ProfileUpdate", "ProfileDB", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name);
        </div>
        <div>
            <label>Age:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age);
        </div>
        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.address);
        </div>
        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email);
        </div>
        <div>
            <label>Photo:</label>
        </div>
        <div>
            <img src="@Url.Content(@Model.photo)" alt="hai" height="300px" width="300px" />
        </div>
        <div>
            <input type="submit" value="Update" />
            @Html.DisplayFor(m => m.message)
        </div>
        <div>
            @Html.ActionLink("Back to home", "Home", "LoginDB")
        </div>
    }
</div>

